<!DOCTYPE html>
<html>
    <head>
        <title>评论管理</title>
        <link rel='stylesheet' href='/stylesheets/style.css'/>
        <link rel='stylesheet' href='/stylesheets/comment.css'/>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <link rel='stylesheet' href='/stylesheets/style.css' />
        <link rel='stylesheet' href='/stylesheets/user.css' />
        <!-- 后端登录 --><link rel="stylesheet" href="https://at.alicdn.com/t/font_1506624_oswwuan5y68.css">
        <!-- 后端用户 --><link rel="stylesheet" href="https://at.alicdn.com/t/font_1802183_38fatl16wi8.css">
    </head>
    <body class="bg">
        <header style="width:100%;height:140px;"> 
          <img src="./images/logo.png" style="width:120px;height:120px;float:left;margin-left: 30px;"/>
          <p style="float:left;color:white;font-size:42px;line-height:130px;margin-left:40px;">图文期刊在线阅读管理系统</p>
        </header>
        <div class="left">
            <div class="nav">
                <a href="/home">首页</a>
            </div>
            <div class="nav">
                <a href="/user">用户管理</a>
            </div>
            <div class="nav" style="background: rgba(255,255,255,0.5);">
                <a href="/block">评论管理</a>
            </div>
            <div class="nav">
                <a href="/book">期刊管理</a>
            </div>
            <div class="nav">
                <a href="/score">积分管理</a>
            </div>
            <div class="nav">
                <a href="/system">系统管理</a>
            </div>
           
        </div>
        <div class="right">
            <div class="box1">
                <span style="font-size: 30px;font-weight: bolder;">您搜索的结果是:</span>
                <div style="margin-right:4%;float: right;">
                    <a style="text-decoration:none" href='/block'>
                        <button style="background-color: transparent;color:white;border: 1px solid white;width: 50px;height: 30px;    border-radius: 10px;
                        ">返回</button>
                    </a>
                </div>
            </div>
            <div class='Blockbox3' >
                <ul id="all" >
                    <% for(var i = 0 ; i < blockList.length; i++) {%>
                        <li>
                            <p class='Blockbody'><%= blockList[i]["postId"] %></p>
                            <p class='Blockbody'><%= blockList[i]["bookId"] %></p>
                            <p class='Blockbody'><%= blockList[i]["postTime"]%></p>
                            <p class='Blockbody'><a style="text-decoration:none;color: white;" href='/commentIn?postId=<%=blockList[i]["bookId"] %>'>评论详情</a></p>  
                            <p class='Blockbody'><a style="text-decoration:none;color: white;" href='/comment?bookId=<%= blockList[i]["bookId"] %>'>所有回复</a></p>  
                        </li>
                    <%}%>  
               </ul>
            </div>
            <div style=" width:92%;height:30px;text-align: center;margin:25px auto;color:white"> 
                <div class="page">
                    <div id="page">
                    </div>
                </div>
            </div>
        </div>
    </body>
    <script src="https://cdn.staticfile.org/jquery/1.10.2/jquery.min.js"></script>
    <script type="text/javascript"></script>
    <script>
         function getzz() {
            var a = $("ul#all li");
            var zz =new Array(a.length);
            for(var i=0;i <a.length;i++){
                zz[i]=a[i].innerHTML;
            }
            return zz;
        }
        function change(e){
            pageno=e;
            if(e<1){
                e=1;pageno=1;
            }
            if(e>pageall){
                e=pageall;pageno=pageall;
            }
            $("#all").html("");
            if(pageno==1){
                var html=" <li><div class='Blockhead'><h3 class='Blockhead1'>评论编号</h3><h3 class='Blockhead1'>图文期刊编号</h3><h3 class='Blockhead1'>发布时间</h3><h3 class='Blockhead1'>查看详情</h3><h3 class='Blockhead1'>所有回复</h3></div></li> ";
            }
            else{
                var html=" <li><div class='Blockhead'><h3 class='Blockhead1'>评论编号</h3><h3 class='Blockhead1'>图文期刊编号</h3><h3 class='Blockhead1'>发布时间</h3><h3 class='Blockhead1'>查看详情</h3><h3 class='Blockhead1'>所有回复</h3></div></li> ";
            }
            for(var i=0;i<pagesize;i++){
                html += '<li>' + zz[(e-1)*pagesize+i] +'</li>';
                if(zz[(e-1)*pagesize+i+1]==null) break;
            }
            $("ul#all").html(html);
            var ye="";
        for(var j=1;j<=pageall;j++){
            if(e==j){
                ye=ye+"<span><a href='#' onClick='change("+j+")' style='background:rgba(255,255,255,0.5);color:white'>"+j+"</a></span> "
            }else{
                ye=ye+"<a href='#' style='color:#fff' onClick='change("+j+")'>"+j+"</a> "
            }
        }
        var pageContent="";
            pageContent +='第<span id=\"a2\">'+pageno+'</span>/';
            pageContent +='<span id="a1">'+pageall+'</span>页';
            pageContent +='<a href="#" style="margin-left:10px;color:white" onClick="change(--pageno)"><</a>';
            pageContent +="<span id='a3' style='margin-left:10px'>"+ye+'</span>';
            pageContent +='<a href="#" style="margin-left:5px;color:white" onClick="change(++pageno)">></a>';
            $("#page").html(pageContent);
        }
            var zz=getzz()
            var pageno=1 ; 
            var pagesize=4; 
            if(zz.length%pagesize==0){
                var  pageall =zz.length/pagesize ;
            }else{
                var  pageall =parseInt(zz.length/pagesize)+1;
            } 
            change(1);
    </script>
</html>
