<!DOCTYPE html>
<html>
    <head>
        <title>用户管理</title>
        <link rel='stylesheet' href='/stylesheets/style.css'/>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <link rel='stylesheet' href='/stylesheets/style.css' />
        <link rel='stylesheet' href='/stylesheets/user.css' />
        <!-- 后端登录 --><link rel="stylesheet" href="https://at.alicdn.com/t/font_1506624_oswwuan5y68.css">
        <!-- 后端用户 --><link rel="stylesheet" href="https://at.alicdn.com/t/font_1802183_38fatl16wi8.css">
    </head>
    <body class="bg">
        <header style="width:100%;height:140px;"> 
          <img src="./images/logo.png" style="width:120px;height:120px;float:left;margin-left: 30px;"/>
          <p style="float:left;color:white;font-size:42px;line-height:130px;margin-left:40px;">图文期刊在线阅读管理系统</p>
        </header>
        <div class="left">
            <div class="nav" style="background: rgba(255,255,255,0.5);">
                <a href="/user">用户管理</a>
            </div>
            <div class="nav">
                <a href="/block">评论管理</a>
            </div>
            <div class="nav">
                <a href="/book">期刊管理</a>
            </div>
            <div class="nav">
                <a href="/score">积分管理</a>
            </div>
            <div class="nav">
                <a href="/system">系统管理</a>
            </div>
            <div class="nav">
                <a href="/">返回</a>
            </div>
        </div>
        <div class="right">
            <div class="box1" >
                <div class='search'>
                    <form style="line-height: 3em;" method="post" action="/searchuser">
                        <input class='Bar' placeholder="请输入要查找用户的手机号" name='userPhone' />
                        <div class="iconfont icon-xiaoxi-" style="float:left;">
                            <input type="submit" value="搜索"style="height:30px;border:none; color:white; background:transparent;
                            ">
                        </div>
                    </form>
                </div>
                <a href='/user' style="color: white;">
                    <span style="margin-left:50px;font-size: 35px;line-height:1.8em" class="iconfont iconpaixu-shengxu" id="btn"></span>
                    <span style="font-size:20px;margin-left:5px;font-weight:lighter">ID升序</span>
                    </a>
                    <a href="/userdesc"  style="color: white;">
                    <span style="margin-left:50px;font-size: 35px;line-height:1.8em" class="iconfont iconpaixu-jiangxu" id="btn"></span>
                    <span style="font-size:20px;margin-left:5px;font-weight:lighter">ID降序</span>
                </a>  
            </div>
            <div class='Userbox3' >
                <ul id="all" >
                    <% for(var i = 0 ; i <  userList.length; i++) {%>
                    <li>
                        <p class='Userbody'><%= userList[i]["userId"] %></p>
                        <div class='Userbody'>
                            <%if(userList[i]["userImage"]!=null){%>
                                <img class="Userimg" src='<%= userList[i]["userImage"] %>'/>
                                <%}else{%>
                                <img class="Userimg" src='http://img2.3png.com/eebe5ef277285d150546fd77d248786d2a9e.png'/>
                                <%}%>
                        </div>
                        <p class='Userbody'><%= userList[i]["userPhone"] %></p>
                        <p class='Userbody'><%= userList[i]["userName"] %></p>
                        <p class='Userbody'><%= userList[i]["userSex"] %></p>
                        <p class='Userbody'><%= userList[i]["userBir"].slice(0,10)%></p>
                        <p class='Userbody'><a style="text-decoration:none;color: white;" href='/subscribe?userPhone=<%= userList[i]["userPhone"]%>&&userName=<%= userList[i]["userName"]%>'>查看详情</a></p>  
                        <p class='Userbody'><a href='/deleteuser?userPhone=<%= userList[i]["userPhone"]%>'><button class='Userdel' >移除</button></a></p>
                    </li>
                    <%}%>
               </ul>
            </div>
            <div style=" width:92%;height:30px;text-align: center;margin:25px auto;color:white"> 
                <div class="page">
                    <div id="page">
                    </div>
                </div>
            </div>
        </div>
    </body>
    <script src="https://cdn.staticfile.org/jquery/1.10.2/jquery.min.js"></script>
    <script type="text/javascript"></script>
    <script>
         function getzz() {
            var a = $("ul#all li");
            var zz =new Array(a.length);
            for(var i=0;i <a.length;i++){
                zz[i]=a[i].innerHTML;
            }
            return zz;
        }
        function change(e){
            pageno=e;
            if(e<1){
                e=1;pageno=1;
            }
            if(e>pageall){
                e=pageall;pageno=pageall;
            }
            $("#all").html("");
            if(pageno==1){
                var html=" <li><div class='Userhead'><h3 class='Userhead1'>用户ID</h3><h3 class='Userhead1'>头像</h3><h3 class='Userhead1'>手机号</h3><h3 class='Userhead1'>用户名</h3><h3 class='Userhead1'>性别</h3><h3 class='Userhead1'>生日</h3><h3 class='Userhead1'>订阅</h3><h3 class='Userhead1'>操作</h3></div></li> ";
            }
            else{
                var html=" <li><div class='Userhead'><h3 class='Userhead1'>用户ID</h3><h3 class='Userhead1'>头像</h3><h3 class='Userhead1'>手机号</h3><h3 class='Userhead1'>用户名</h3><h3 class='Userhead1'>性别</h3><h3 class='Userhead1'>生日</h3><h3 class='Userhead1'>订阅</h3><h3 class='Userhead1'>操作</h3></div></li> ";
            }
            for(var i=0;i<pagesize;i++){
                html += '<li>' + zz[(e-1)*pagesize+i] +'</li>';
                if(zz[(e-1)*pagesize+i+1]==null) break;
            }
            $("ul#all").html(html);
            var ye="";
        for(var j=1;j<=pageall;j++){
            if(e==j){
                ye=ye+"<span><a href='#' onClick='change("+j+")' style='background:rgba(255,255,255,0.5);color:white'>"+j+"</a></span> "
            }else{
                ye=ye+"<a href='#' style='color:#fff' onClick='change("+j+")'>"+j+"</a> "
            }
        }
        var pageContent="";
            pageContent +='第<span id=\"a2\">'+pageno+'</span>/';
            pageContent +='<span id="a1">'+pageall+'</span>页';
            pageContent +='<a href="#" style="margin-left:10px;color:white" onClick="change(--pageno)"><</a>';
            pageContent +="<span id='a3' style='margin-left:10px'>"+ye+'</span>';
            pageContent +='<a href="#" style="margin-left:5px;color:white" onClick="change(++pageno)">></a>';
            $("#page").html(pageContent);
        }
            var zz=getzz()
            var pageno=1 ; 
            var pagesize=4; 
            if(zz.length%pagesize==0){
                var  pageall =zz.length/pagesize ;
            }else{
                var  pageall =parseInt(zz.length/pagesize)+1;
            } 
            change(1);
    </script>
</html>
