<!DOCTYPE html>
<html>
    <head>
        <title>系统管理</title>
        <link rel='stylesheet' href='/stylesheets/style.css'/>
        <link rel="stylesheet" href="/stylesheets/system.css">
    </head>
    <body class="bg">
        <header style="width:100%;height:140px;"> 
          <img src="./images/logo.png" style="width:120px;height:120px;float:left;margin-left: 30px;"/>
          <p style="float:left;color:white;font-size:42px;line-height:130px;margin-left:40px;">图文期刊在线阅读管理系统</p>
        </header>
        <div class="left">
            <div class="nav">
                <a href="/syslist">所有管理员</a>
            </div>
            <div class="nav" style="background: rgba(255,255,255,0.5);box-shadow:0px 0px 15px 1px rgba(255,255,255,0.89) inset;">
                <a href="/system">此账号</a>
            </div>
            <div class="nav">
                <a href="/sys">返回</a>
            </div>
           
        </div>
        <div class="right">
            <div style="width:75%;height:420px;margin:40px auto;background: rgba(255,255,255,0.5);;font-size:20px;text-align: center;">
                <p style="text-align:center;color:white;padding-top:20px;font-size: 30px;">当前管理员信息
                    <span style="float: right;padding-right: 5px;"><a style="text-decoration:none;color: white;" href='/sys'>
                        &#10006;
                     </a>
                     <span>
                </p>
                <div style="width:530px;height: 350px;margin: 0 auto;">
                <div style="width:130px;height:300px;margin:30px 10px;float: left;">
                    <div style="width:130px;float:left;">
                        <img  src='http://img2.3png.com/eebe5ef277285d150546fd77d248786d2a9e.png' style="width:100%;border-radius:50%;margin: 10px auto;">
                    </div>
                    <div style="width:130px;float:left;margin-top:20px;color: white;text-align: center;">
                        <button id="btn" class="systembianji" style='    box-shadow:0px 0px 15px 1px rgba(255,255,255,0.89) inset;
                        '>编辑</button>

                    </div> 
                    <a href="/login">
                        <button id="out" class="systemOut" style='    box-shadow:0px 0px 15px 1px rgba(255,255,255,0.89) inset;
                        '>退出登录</button>
                    </a>
                </div>
                <div style="width:335px;height:300px;margin:30px 20px;text-align:left;line-height:40px;float: left;">
                    <div class="systemText">
                        <p>用户名：
                            <span id="username"><%= manager.adminUsername%></span>
                        </p>
                    </div>
                    <div class="systemText">
                        <p>姓名：
                            <span id="name"><%= manager.adminName%></span>
                        </p>
                    </div>
                    <div class="systemText">
                        <p>性别：
                            <span id="sex"><%= manager.adminSex%></span>
                        </p>
                    </div>
                    <div class="systemText">
                        <p>手机号：
                            <span id="phone"><%= manager.adminPhone%></span>
                        </p>
                    </div>
                    <div class="systemText">
                        <p>邮箱：
                            <span id="email"><%= manager.adminEmail%></span>
                        </p>
                    </div>
                
                </div>
                </div>
            </div>
        </div>
        <div>
            <div id="pop-container">
                <div id="cover-tier" class="popPosition"></div>
                <div id="pop-tier" class="popPosition">
                    <i id="close-pop">&#10006;</i>
                    <form style="margin-top:50px;" action='/system' method='POST'>
                        <div class='text'>
                            <h4>用户名：</h4>
                            <input type="text" name="username" id="new-username"/>
                        </div>
                        <div class='text'>
                            <h4>姓名</h4>
                            <input type="text" name="name" id="new-name"/>
                        </div>
                        <div class='text'>
                            <h4>性别：</h4>
                            <input type="text" name="sex" id="new-sex"/>
                        </div>
                        <div class='text'>
                            <h4>邮箱：</h4>
                            <input type="text" name="email" id="new-email"/>
                        </div>
                      
                        <button type="submit" id="save" class="systemSave">保存</button> 
                    </form>
                </div>
            </div>
        </div>
    </body>
    <script src="https://cdn.staticfile.org/jquery/1.10.2/jquery.min.js"></script>
    <script type="text/javascript"></script>
    <script>
        function temp(id) {
            return document.getElementById(id);
        }
        // 点击按钮出现弹出层
        temp('btn').onclick = function() {
            temp('pop-container').style.display = 'block';
            $('#new-username').val($('#username').html());
            $('#new-name').val($('#name').html());
            $('#new-sex').val($('#sex').html());
            $('#new-email').val($('#email').html());
        }
        // 点击右上角X弹出层隐藏
        temp('close-pop').onclick = function() {
            temp('pop-container').style.display = 'none';
        }
    </script>
</html>
